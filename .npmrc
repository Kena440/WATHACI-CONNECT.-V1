# npm registry configuration
# This ensures reliable package access and prevents registry blocking issues

# Primary npm registry
registry=https://registry.npmjs.org/

# Timeout and retry settings for better reliability
fetch-retries=3
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Cache preference (replaces deprecated cache-max/cache-min)
prefer-online=false
prefer-offline=false

# Security settings
audit-level=moderate
fund=false
progress=true

# Install behavior
save-exact=true
package-lock=true